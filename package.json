{
  "name": "sveld",
  "version": "0.18.1",
  "license": "Apache-2.0",
  "description": "Generate TypeScript definitions for your Svelte components.",
  "main": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "test:unit": "vitest -r tests",
    "test:snapshot": "node tests/test-snapshot",
    "test:integration": "node tests/test-integration",
    "format": "prettier --write \"{src,tests}/**/*.{js,ts,svelte,md}\"",
    "prepack": "tsc"
  },
  "dependencies": {
    "@rollup/plugin-node-resolve": "^13.2.1",
    "acorn": "^8.8.0",
    "comment-parser": "^1.3.1",
    "fast-glob": "^3.2.12",
    "prettier": "^2.6.2",
    "rollup": "^2.70.2",
    "rollup-plugin-svelte": "^7.1.0",
    "svelte": "^3.52.0",
    "svelte-preprocess": "^4.10.6",
    "typescript": "^4.8.4"
  },
  "devDependencies": {
    "@sveltejs/vite-plugin-svelte": "1.0.9",
    "@types/node": "^18.11.0",
    "@types/prettier": "^2.7.1",
    "carbon-components-svelte": "^0.70.12",
    "carbon-preprocess-svelte": "^0.9.1",
    "codemirror": "5.65.5",
    "prettier-plugin-svelte": "^2.8.0",
    "svelte-highlight": "^6.2.1",
    "vite": "^3.1.8",
    "vitest": "^0.24.3"
  },
  "bin": {
    "sveld": "./cli.js"
  },
  "files": [
    "lib",
    "cli.js"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/carbon-design-system/sveld.git"
  },
  "homepage": "https://github.com/carbon-design-system/sveld",
  "bugs": "https://github.com/carbon-design-system/sveld/issues",
  "keywords": [
    "svelte",
    "svelte component",
    "documentation",
    "docgen",
    "typescript",
    "definitions",
    "JSDocs"
  ],
  "prettier": {
    "printWidth": 120
  },
  "contributors": [
    "Eric Liu (https://github.com/metonym)"
  ]
}
