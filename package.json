{
  "name": "sveld",
  "version": "0.13.4",
  "license": "Apache-2.0",
  "description": "Generate TypeScript definitions for your Svelte components.",
  "main": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc -w",
    "test": "run-p test:*",
    "test:unit": "tsnd node_modules/tape/bin/tape tests/*.test.ts",
    "test:integration": "node tests/integration",
    "format": "prettier --write \"{src,tests}/**/*.{js,ts,svelte}\"",
    "prepack": "run-s build test"
  },
  "peerDependencies": {
    "svelte": "^3.31.0"
  },
  "dependencies": {
    "@rollup/plugin-node-resolve": "^11.0.1",
    "acorn": "^8.4.1",
    "comment-parser": "^0.7.6",
    "fast-glob": "^3.2.7",
    "fs-extra": "^9.0.1",
    "prettier": "^2.5.1",
    "rollup": "^2.66.0",
    "rollup-plugin-svelte": "^7.1.0",
    "svelte": "^3.46.2",
    "svelte-preprocess": "^4.10.2",
    "typescript": "^4.5.5"
  },
  "devDependencies": {
    "@types/fs-extra": "^9.0.12",
    "@types/node": "^14.14.20",
    "@types/prettier": "^2.3.2",
    "@types/tape": "^4.13.2",
    "npm-run-all": "^4.1.5",
    "prettier-plugin-svelte": "^2.4.0",
    "tape": "^5.3.1",
    "ts-node-dev": "^1.1.1",
    "vitest": "^0.5.7"
  },
  "bin": {
    "sveld": "./cli.js"
  },
  "files": [
    "lib",
    "cli.js"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/carbon-design-system/sveld.git"
  },
  "homepage": "https://github.com/carbon-design-system/sveld",
  "bugs": "https://github.com/carbon-design-system/sveld/issues",
  "keywords": [
    "svelte",
    "svelte component",
    "documentation",
    "docgen",
    "typescript",
    "definitions",
    "JSDocs"
  ],
  "prettier": {
    "printWidth": 120
  },
  "contributors": [
    "Eric Liu (https://github.com/metonym)"
  ]
}
