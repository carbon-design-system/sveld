{
  "name": "sveld",
  "version": "0.13.4",
  "license": "Apache-2.0",
  "description": "Generate TypeScript definitions for your Svelte components.",
  "main": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc -w",
    "test:unit": "vitest",
    "test:snapshot": "node tests/test-snapshot",
    "test:integration": "node tests/test-integration",
    "format": "prettier --write \"{src,tests}/**/*.{js,ts,svelte,md}\"",
    "prepack": "yarn build"
  },
  "dependencies": {
    "@rollup/plugin-node-resolve": "^11.0.1",
    "acorn": "^8.7.0",
    "comment-parser": "^0.7.6",
    "fast-glob": "^3.2.11",
    "fs-extra": "^9.0.1",
    "prettier": "^2.5.1",
    "rollup": "^2.68.0",
    "rollup-plugin-svelte": "^7.1.0",
    "svelte": "^3.46.4",
    "svelte-preprocess": "^4.10.4",
    "typescript": "^4.5.5"
  },
  "devDependencies": {
    "@types/fs-extra": "^9.0.13",
    "@types/node": "^17.0.21",
    "@types/prettier": "^2.4.4",
    "prettier-plugin-svelte": "^2.6.0",
    "vitest": "^0.5.7"
  },
  "bin": {
    "sveld": "./cli.js"
  },
  "files": [
    "lib",
    "cli.js"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/carbon-design-system/sveld.git"
  },
  "homepage": "https://github.com/carbon-design-system/sveld",
  "bugs": "https://github.com/carbon-design-system/sveld/issues",
  "keywords": [
    "svelte",
    "svelte component",
    "documentation",
    "docgen",
    "typescript",
    "definitions",
    "JSDocs"
  ],
  "prettier": {
    "printWidth": 120
  },
  "contributors": [
    "Eric Liu (https://github.com/metonym)"
  ]
}
