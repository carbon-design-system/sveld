{
  "name": "sveld",
  "version": "0.14.1",
  "license": "Apache-2.0",
  "description": "Generate TypeScript definitions for your Svelte components.",
  "main": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "test:unit": "vitest",
    "test:snapshot": "node tests/test-snapshot",
    "test:integration": "node tests/test-integration",
    "format": "prettier --write \"{src,tests}/**/*.{js,ts,svelte,md}\"",
    "prepack": "tsc"
  },
  "dependencies": {
    "@rollup/plugin-node-resolve": "^13.1.3",
    "acorn": "^8.7.0",
    "comment-parser": "^1.3.1",
    "fast-glob": "^3.2.11",
    "prettier": "^2.6.2",
    "rollup": "^2.70.1",
    "rollup-plugin-svelte": "^7.1.0",
    "svelte": "^3.47.0",
    "svelte-preprocess": "^4.10.5",
    "typescript": "^4.6.3"
  },
  "devDependencies": {
    "@sveltejs/vite-plugin-svelte": "1.0.0-next.41",
    "@types/node": "^17.0.23",
    "@types/prettier": "^2.6.0",
    "carbon-components-svelte": "^0.62.3",
    "carbon-preprocess-svelte": "^0.8.1",
    "codemirror": "^5.65.2",
    "prettier-plugin-svelte": "^2.7.0",
    "svelte-highlight": "^6.0.1",
    "vite": "^2.9.1",
    "vitest": "^0.9.3"
  },
  "bin": {
    "sveld": "./cli.js"
  },
  "files": [
    "lib",
    "cli.js"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/carbon-design-system/sveld.git"
  },
  "homepage": "https://github.com/carbon-design-system/sveld",
  "bugs": "https://github.com/carbon-design-system/sveld/issues",
  "keywords": [
    "svelte",
    "svelte component",
    "documentation",
    "docgen",
    "typescript",
    "definitions",
    "JSDocs"
  ],
  "prettier": {
    "printWidth": 120
  },
  "contributors": [
    "Eric Liu (https://github.com/metonym)"
  ]
